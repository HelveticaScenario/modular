{
    "compilerOptions": {
        "target": "esnext",
        "allowJs": true,
        "module": "esnext",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "jsx": "react-jsx",
        "strict": true
    },
    "include": ["src/**/*"]
}
