{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "menubar-example",
    "version": "0.1.0",
    "identifier": "com.menubar-example.app",

    "app": {
        "withGlobalTauri": true,
        "windows": [],
        "security": {
            "csp": null
        }
    },
    "build": {
        "frontendDist": "../modular_server/static",
        "beforeBuildCommand": "cd ../modular_web && npm install && npm run build",
        "beforeDevCommand": "cd ../modular_web && npm install && npm run dev"
    },
    "bundle": {
        "macOS": {
            "minimumSystemVersion": "10.13",
            "entitlements": null
        }
    }
}
