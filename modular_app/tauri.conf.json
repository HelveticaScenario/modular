{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "modular",
    "version": "0.1.0",
    "identifier": "com.modular.app",

    "app": {
        "withGlobalTauri": true,
        "windows": [],
        "security": {
            "csp": null
        }
    },
    "build": {
        "frontendDist": "../dist",
        "beforeBuildCommand": "npm run build",
        "beforeDevCommand": "npm run dev"
    },
    "bundle": {
        "macOS": {
            "minimumSystemVersion": "10.13",
            "entitlements": null
        },
        "resources": ["../dist/"],
        "targets": ["app", "dmg"]
    }
}
